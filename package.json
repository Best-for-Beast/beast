{
  "name": "app.bestforbeast.com",
  "version": "0.1.0",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/best-for-beast/app.bestforbeast.com"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --single",
    "validate": "svelte-check",
    "test": "jest",
    "clear-jest": "jest --clearCache",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint --ext .cjs,.js,.ts,.json,.svelte .",
    "lint-fix": "eslint --fix --ext .cjs,.js,.ts,.json,.svelte .",
    "format": "prettier --plugin=./node_modules/prettier-plugin-svelte --check .",
    "format-fix": "prettier --plugin=./node_modules/prettier-plugin-svelte --write .",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/svelte": "^3.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "adr-log": "^2.2.0",
    "autoprefixer": "^9.8.6",
    "date-fns": "^2.16.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-svelte3-preprocess": "0.0.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "jest-fetch-mock": "^3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.5.1",
    "msw": "^0.21.3",
    "patch-package": "^6.2.2",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.2.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-svelte-svg": "^0.2.3",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-jester": "^1.1.5",
    "svelte-preprocess": "^4.0.0",
    "svelte-spa-router": "^3.0.5",
    "tailwindcss": "^1.9.6",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.svelte": [
      "svelte-check"
    ]
  }
}
